<?xml version="1.0"?>
<robot name="mobile_platform">

    <!--Fixed base link-->
    <link name="base_link">
        <!--Geometric information-->
        <visual>
            <geometry>
                <box size="0.2 0.2 0.2"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
            <origin rpy="0 0 0" xyz="0 0 0"/>
        </visual>

        <!--Physical properties-->
        <collision>
            <geometry>
                 <sphere radius="0.1"/>
            </geometry>
        </collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
    </link>

    <gazebo reference="base_link">
        <material>Gazebo/White</material>
    </gazebo>

    <!--Board of the mobile platform-->
    <link name="board">
        <!--Geometric information-->
        <visual>
            <geometry>
                <box size="1 1 0.05"/>
            </geometry>
            <material name="green">
                <color rgba="0 1 0 1"/>
            </material>
            <origin xyz="0 0 1"/>
        </visual>

        <!--Physical properties-->
        <collision>
            <geometry>
                 <box size="1 1 0.05"/>
            </geometry>
            <origin xyz="0 0 1"/>
        </collision>

        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.0835" iyy="0.0835" izz="0.167"
                     ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <gazebo reference="board">
        <material>Gazebo/Red</material>
    </gazebo>


    <!--Revolute joint between the world and the board-->
    <joint name="revolute_jointx" type="revolute">
        <origin rpy="0 0 0" xyz="0 0 1"/>
        <axis xyz="1 0 0"/>
        <parent link="base_link"/>
        <child link="board"/>
        <limit upper="1.57" lower="-1.57"/>
        <dynamics damping="0.1" friction="0.1"/>
    </joint>

</robot>
 