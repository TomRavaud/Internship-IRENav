<?xml version="1.0"?>
<robot name="mobile_platform">

    <!--Fixed link-->
    <link name="sphere">
        <visual>
            <geometry>
                <sphere radius="0"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
    </link>

    <link name="sphere2">
        <visual>
            <geometry>
                <sphere radius="0"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
    </link>


    <!--Board of the mobile platform-->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="1 1 0.05"/>
            </geometry>
            <material name="green">
                <color rgba="0 1 0 1"/>
            </material>
        </visual>
    </link>

    <!--Joint between the fixed link and the board allowing 6 DOFs-->
    <joint name="revolute_jointx" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 1"/>
        <axis xyz="1 0 0"/>
        <parent link="base_link"/>
        <child link="sphere"/>
    </joint>

    <joint name="revolute_jointy" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 1"/>
        <axis xyz="0 1 0"/>
        <parent link="base_link"/>
        <child link="sphere2"/>
    </joint>

</robot>
 