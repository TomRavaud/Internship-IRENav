<?xml version="1.0" ?>
<launch>

    <arg name="pi/2" value="1.57079632679"/>

    <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find platform_gazebo)/worlds/simple.world"/>
    </include>

    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find platform_control)/config/joint_position_controller.yaml" command="load"/>

    <!-- MOBILE PLATFORM -->
    <group ns="mobile_platform">
        <param name="robot_description" command="$(find xacro)/xacro '$(find platform_description)/urdf/mobile_platform.xacro' robot_namespace:=/mobile_platform"/>
        <param name="tf_prefix" value="mobile_platform"/>
        <include file="$(find platform_gazebo)/launch/mobile_platform.launch" >
            <arg name="init_pose" value="-x 0 -y 0 -z 1" />
        </include>
    </group>

    <!-- CAMERA -->
    <!-- <group ns="camera2"> -->
        <param name="robot_description" command="$(find xacro)/xacro '$(find camera)/urdf/camera.xacro'"/>
        <param name="tf_prefix" value="camera1" />
        <include file="$(find platform_gazebo)/launch/camera.launch" >
            <arg name="init_pose" value="-x 0 -y 0 -z 2 -R 0 -P $(arg pi/2) -Y 0" />
        </include>
    <!-- </group> -->

</launch>
